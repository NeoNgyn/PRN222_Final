@page
@model Shopping_Store.Areas.Admin.Pages.Brands.EditBrandModel
@{
    ViewData["Title"] = "Sửa thương hiệu";
}

<h1>Sửa thương hiệu</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Brand.Id" /> @* Truyền ID để biết đối tượng nào đang sửa *@
            <input type="hidden" asp-for="Brand.Slug" /> @* Truyền Slug cũ để tránh lỗi binding nếu không sửa tên *@

            <div class="form-group">
                <label asp-for="Brand.Name" class="control-label"></label>
                <input asp-for="Brand.Name" class="form-control" />
                <span asp-validation-for="Brand.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand.Description" class="control-label"></label>
                <textarea asp-for="Brand.Description" class="form-control"></textarea>
                <span asp-validation-for="Brand.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand.Status" class="control-label">Trạng thái</label>
                <input asp-for="Brand.Status" class="form-control" />
                <span asp-validation-for="Brand.Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    @* Nếu muốn dùng CKEditor cho Description, hãy thêm ở đây *@
}
