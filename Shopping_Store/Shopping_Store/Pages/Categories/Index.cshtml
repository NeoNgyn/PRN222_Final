@page
@model Shopping_Store.Pages.Categories.IndexModel // Thay YourProjectName bằng namespace của project bạn
@{
}

@{
    ViewData["Title"] = "Trang chủ";
}

<div class="col-sm-3">
    @Html.Partial("_SidebarPartial")
</div>

<div class="col-sm-9 padding-right">
    <div class="features_items">
        <!--features_items-->
        <h2 class="title text-center">Features Items</h2>

        @if (Model.Products != null && Model.Products.Any())

        {
            @foreach (var item in Model.Products)

            {
                <div class="col-sm-4">
                    @* Sử dụng col-sm-4 để hiển thị 3 sản phẩm trên một hàng *@
                    <h4 class="panel-title">
                        @* --- SỬA LIÊN KẾT ĐẾN DANH MỤC Ở ĐÂY --- *@
                        @* asp-page: trỏ đến trang Razor Page chính xử lý Category *@
                        @* asp-route-slug: truyền giá trị slug vào route *@
                        <a asp-page="/Categories/Index" asp-route-slug="@item.Slug">@item.Name</a>
                    </h4>
                    <div class="product-image-wrapper">
                        <div class="single-products">
                            <div class="productinfo text-center">
                                @* Sử dụng dữ liệu thực tế từ Model.Products *@
                                <img src="~/media/products/@item.ImageUrl" alt="@item.Name" width="100%" />
                                <h2>@item.Price.ToString("C")</h2> @* Hiển thị giá và định dạng tiền tệ *@
                                <p>@item.Name</p>
                                <p>Danh mục:@item.Category.Name</p>
                                <p>Thương hiệu:@item.Brand.Name</p>
                                <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                            </div>
                            <div class="product-overlay">
                                <div class="overlay-content">
                                    <h2>@item.Price.ToString("C")</h2>
                                    <p>@item.Name</p>
                                    <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                                </div>
                            </div>
                        </div>
                        <div class="choose">
                            <ul class="nav nav-pills nav-justified">
                                <li><a href="#"><i class="fa fa-plus-square"></i>Add to wishlist</a></li>
                                <li><a href="#"><i class="fa fa-plus-square"></i>Add to compare</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-center">Hiện không có sản phẩm nào để hiển thị.</p>
        }
    </div><!--features_items-->
</div>